<div class="container mt-4">
    <div class="row g-5">
        <div class="col-md-8 col-lg-8 order-md-last ">
          <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-black">Interview List </span>
            <a class="btn btn-primary " href="../student/download">Download CSV</a>
          </h4>
          <table class="table table-bordered  mb-3">
            
            <thead>
              <tr>
                <th> Company Name</th>
                <th>Student Name</th>
                <th> Status </th>
                <th>Date</th>

              </tr>
            </thead>
            <tbody>
              <% for (interview of interviews) { %>
                <tr>
                <td><%=  interview.c_name%></td>
                <td><%=  interview.s_name %></td>
                <td><%=  interview.status %></td>
                <td><%=  interview.date %></td>
                
                </tr>
                
              <% } %>
            </tbody>
    
          </table>
    
        </div>
        
        <div class="col-md-4 col-lg-4 ">
          <h4 class="mb-3">New Interview</h4>
          
          <form class="needs-validation"  method="post" action="../student/create-interview">
            <div class="row g-3">
              <div class="col-12">
                <label for="c-name" class="form-label">Company name</label>
                <input type="text" class="form-control" id="c-name"  name="c_name" required>
              </div>
    
              <div class="col-12">
                
                <label for="s-name" class="form-label">Student Name</label>
                
                <select class="form-select" aria-label="Default select example" id="s-name" name="s_name" required>
                  <% for(student of students) { %> 
                    <option value="<%= student.s_name %>">
                      <%= student.s_name %>
                    </option>
                  <% } %>
                  
                </select>
              </div>
    
              <div class="col-12">
                <label for="status" class="form-label">current Status</label>
                
                <select class="form-select" aria-label="Default select example" id="status" name="status" required>
                  <option value="sortlisted">sortlisted</option>
                  <option value="round 1">round 1</option>
                  <option value="round 2">round 2</option>
                  <option value="rejected">rejected</option>
                  <option value="placed">placed</option>
                </select>
              </div>
              <div class="col-12">
                <label for="date" class="form-label">Date</label>
                <input type="date" class="form-control" id="date"  name="date" required>
              </div>
            </div>
    
            <hr class="my-4">
    
            <button class="w-100 btn btn-primary btn-lg" type="submit">Create New Interview</button>
          </form>
        </div>
      </div>
    </div>